    <script>
      const titleChanger = {
        messages: ["ðŸ”¥ Don't forget this...", 'âš¡ Come Back Now'],
        delay: 1000,
        titleTag: document.getElementsByTagName('title')[0],
        originalTitle: '',
        isSingle: false,
        isActive: false,
        timer: null,

        init() {
          if (!this.titleTag) return;

          this.originalTitle = this.titleTag.innerText;
          this.isSingle = this.messages.length < 2;

          document.addEventListener('visibilitychange', () => {
            if (document.visibilityState === 'visible') {
              this.handleVisible();
            } else {
              this.handleHidden();
            }
          });
        },

        handleVisible() {
          if (!this.isActive) return;

          clearInterval(this.timer);
          this.titleTag.innerText = this.originalTitle;
          this.isActive = false;
        },

        handleHidden() {
          if (this.isActive) return;

          let index = 0;
          this.isActive = true;
          this.titleTag.innerText = this.messages[index];

          if (this.isSingle) return;

          this.timer = setInterval(() => {
            index = (index + 1) % this.messages.length;
            this.titleTag.innerText = this.messages[index];
          }, this.delay);
        },
      };

      titleChanger.init();
    </script>
