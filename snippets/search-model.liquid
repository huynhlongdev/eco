<div class="header-search absolute top-0 left-0 w-100 h-100 bg-white d-flex items-center" style="display:none">
  <div class="search-modal__content mw-100  mx-auto relative">
    <form action="{{ routes.search_url }}" method="get" class="search search-modal__form relative">
      <input
        id="search__input"
        class="w-100 outline-none border-0"
        autocomplete="off"
        type="text"
        name="q"
        placeholder="Search"
      >
      <button class="search__button absolute outline-none p-0 border-0 bg-transparent">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="11.9886" cy="10.9886" r="8.98856" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></circle>
          <path d="M18.2402 17.707L21.7643 21.2219" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
      </button>
    </form>
    <button
      type="button"
      class="modal__close-button absolute top-0 outline-none p-0 border-0 bg-transparent"
      aria-label="Close"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
        role="img"
        width="20"
        height="20"
        preserveAspectRatio="xMidYMid meet"
        viewBox="0 0 32 32"
      >
        <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><path d="M2 30L30 2m0 28L2 2"></path></g>
      </svg>
    </button>
  </div>
</div>
{% comment %} header-search {% endcomment %}
 
