  window.addEventListener('load', function () {
    jQuery(document).ready(function ($) {
      // close model
      $(document).on('click', '.modal__close-button', function () {
        $(this).closest('header').find('.header-search').fadeOut();
      });

      // open model
      $(document).on('click', '.search-header', function () {
        $(this).closest('header').find('.header-search').fadeIn();
      });
    });
  });
</script>

